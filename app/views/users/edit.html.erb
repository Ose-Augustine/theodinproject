<%= form_with model: @user do |form| %>
  <div>
    <%= form.label :Name %>
    <%= form.text_field :fname %>
  </div>
  <div>
    <%= form.label :Email %>
    <%= form.email_field :email%>
  </div>
  <div>
    <%= form.label :Password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>